<div class="center">
  <%= @banner.title%>
  <hr>

  <%= link_to "Attempt Questions", new_user_response_path%>
  
  <%= form_for(@userresponse, url: new_banner_questionary_answer_user_response_path(@banner.id,@questionaries.ids, answer_id: Answer.where(questionarie_id: @questionaries.ids).ids)) do |f| %>
    <% @questionaries.each_with_index do |question,index|%>
      <h5><%= index+1 %> :- <%= question.question%>(<%= question.question_type%>)</h5>
      <%=f.collection_check_boxes :response_ids, Answer.where(questionarie_id: question.id), :id, :answer %><br>
    <%end%>
    <%= f.submit 'submit'%>
 <%end%>
</div>